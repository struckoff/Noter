<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/lay1" android:weightSum="1" android:background="@color/noteItem_background"
                android:translationZ="100dp">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clearButton"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginStart="76dp"/>

    <com.melnykov.fab.ObservableScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_lay_paren" android:layout_weight="0.97">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/main_lay">
        </LinearLayout>
    </com.melnykov.fab.ObservableScrollView>
    <com.melnykov.fab.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="#b43c33"
            fab:fab_colorPressed="#bb1111"
            fab:fab_colorRipple="#ff1111"
            android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:layout_marginBottom="16dp"/>
</RelativeLayout>

