<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="140dp"

                android:layout_margin="5dp">

    <FrameLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/ll_back"
            android:background="@color/noteItem_back_background"
            android:weightSum="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp">
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:text="New Button"
                         android:id="@+id/share_button"
                         android:src="@drawable/ic_delete_white_48pt" android:adjustViewBounds="true"
                         android:background="#000"/>
            <Space
                    android:layout_width="50px"
                    android:layout_height="20px"
                    />
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/delete_btn" android:src="@drawable/ic_delete_white_48pt"
                    android:adjustViewBounds="true" android:background="#000"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ll_front"
            android:background="@color/noteItem_front_background"
            android:padding="5dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jjjsdhfkjdshfkjhsdkfhksdkhdfkhsdkjhskdhfkhsdfkhsdfkhsdkfhksdfkjhsfksdkfksjdhfksdfksdksdkfjhskdfksdfkjhsdfkhsdkfjhksdf"
                android:id="@+id/note_title"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:textSize="24dp" android:singleLine="true" android:textIsSelectable="false"
                android:textColor="#b00"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/note_text"
                android:layout_below="@+id/note_title" android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" android:phoneNumber="false" android:password="false"
                android:maxLines="3" android:textSize="22dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/note_date"
                android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
                android:layout_gravity="right"/>
    </LinearLayout>
</RelativeLayout>