<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoteDialogStyle" parent="@android:style/Theme.Material.Light">
        <!--<item name="android:background">#fff</item>-->
        <!--<item name="android:textColor">#b00</item>-->
    </style>

    <style name="TagItemStyle" parent="@android:style/Theme.Material.Light">
        <item name="android:background">@drawable/rounded_corner_dialog</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TagItemStyle_su" parent="@android:style/Theme.Material.Light">
        <item name="android:background">@drawable/rounded_corner_dialog_su</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TagLayStyle" parent="@android:style/Theme.Material.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="TagItemStyle_onNoteItem" parent="@android:style/Theme.Material.Light">
        <item name="android:background">@color/notsowhite</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
    </style>

</resources>